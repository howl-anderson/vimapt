#!/usr/bin/env python

import os
import sys
from vimapt import LocalRepo
from vimapt import Install


def main():
    home_dir = os.environ["HOME"]
    vim_dir = os.path.join(home_dir, ".vim")
    #print vim_dir
    package_name = sys.argv[1]
    repo = LocalRepo(vim_dir)
    repo.update()
    package_path = repo.get_package(package_name)
    install = Install.Install(vim_dir, package_path)
    install.install_package()


if __name__ == "__main__":
    main()
